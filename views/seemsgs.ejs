<% include index.ejs%> 


            <div class="w3-container">
                <div class="w3-bar w3-deep-orange">
                    <a href="/" class="w3-bar-item w3-button">
                        <i class="fa fa-home w3-xlarge w3-hover"></i>
                    </a>
                    <a href="/msgForm" class="w3-bar-item w3-btn w3-hover">Send Massege</a>
                    <a href="/msg">
                         <i class="fa fa-refresh w3-spin w3-xlarge w3-padding w3-right "></i>
                    </a>
                </div>

                <div class="w3-container w3-orange w3-animate-right">
                        <h1 style="color:white">All Massege</h1>
                </div>
            </div>
                <div class="w3-container">
                    <% for(var i = 0; i< data.length; i++){%>
                    
                            <dl class="w3-ul w3-card w3-container w3-animate-right" style="width:100%">
                                    <dt class=" w3-padding"><strong>Sender Name</strong></dt>
                                    <dd><%= data[i].senderName %></dd>
                
                                    <dt class=" w3-padding"><strong>Recipient Name</strong></dt>
                                    <dd><%= data[i].recpName %></dd>
                            
                                    <dt class=" w3-padding"><strong>Massege</strong></dt>
                                    <dd><%= data[i].msg %></dd>
                                    <ul  class="w3-ul w3-bar-block w3-right" >
                                        <li >
                                            <a href="/msg/<%= data[i].senderName %>" class="w3-btn w3-hover w3-orange">
                                                Reply<span class="w3-transparent">&#9998;</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/msg/<%= data[i].senderName %>/delete" class="w3-btn w3-hover w3-deep-orange">
                                                Delete<i class="fa fa-trash w3-large "></i>    
                                            </a>
                                        </li> 
                                    </ul>
                                </dl> 
                     
                    <%} %>
                </div>    
             
           